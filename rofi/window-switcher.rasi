configuration {
    modi: "window";
    show-icons: true;
    icon-theme: "Papirus";
    display-window: "";
    window-format: "{w} {c} {t}";
    disable-history: false;
    hover-select: true;
}

* {
    bg-col: #1e1e1e;
    border-col: #89b4fa;
    selected-col: #313244;
    fg-col: #cdd6f4;
    grey: #6c7086;
    
    font: "SF Pro Display 12";
    background-color: transparent;
    text-color: @fg-col;
}

window {
    transparency: "real";
    background-color: @bg-col;
    border: 2px;
    border-color: @border-col;
    border-radius: 20px;
    width: 800px;
    padding: 30px;
    location: center;
    anchor: center;
}

mainbox {
    background-color: transparent;
    spacing: 20px;
}

inputbar {
    background-color: @selected-col;
    text-color: @fg-col;
    padding: 15px;
    border-radius: 12px;
    children: [ prompt, entry ];
}

prompt {
    background-color: transparent;
    text-color: @border-col;
}

entry {
    background-color: transparent;
    text-color: @fg-col;
    placeholder: "Search windows...";
    placeholder-color: @grey;
}

listview {
    background-color: transparent;
    columns: 1;
    lines: 6;
    spacing: 10px;
    scrollbar: false;
}

element {
    background-color: @selected-col;
    text-color: @fg-col;
    padding: 15px;
    border-radius: 12px;
    orientation: horizontal;
}

element normal.normal {
    background-color: @selected-col;
    text-color: @fg-col;
}

element selected.normal {
    background-color: @border-col;
    text-color: @bg-col;
}

element-icon {
    background-color: transparent;
    size: 28px;
    margin: 0 15px 0 0;
}

element-text {
    background-color: transparent;
    vertical-align: 0.5;
}